{
    "type": "af_modis",
    "version": "m.0.1",
    "id": {{ id }},
    "location": {
        "type": "Feature",
        "geometry": {
            "type": "Point",
            "coordinates": [
                {{ lon }}, {{ lat }}
            ]
        },
        "properties": {
            "id": "{{ id }}"
        }
    },
    "fields": {
        "src": {
            "value": "{{ src }}",
            "description": "Data provider/source",
            "format": "FIRMS or CSIR"
        },
        "lon": {
            "value": {{ lon }},
            "description": "Longitude",
            "format": "degrees"
        },
        "lat": {
            "value": {{ lat }},
            "description": "Latitude",
            "format": "degrees"
        },
        "date": {
            "value": "{{ YYYY_MM_DD }}",
            "description": "Date",
            "format": "YYYY-MM-DD"
        },
        "time": {
            "value": "{{ HH_MM_SS }}",
            "description": "Date",
            "format": "HH:MM:SS"
        },
        "btemp": {
            "value": {{ btemp }},
            "description": "Brightness Temperature",
            "format": "K"
        },
        "sat": {
            "value": "{{ sat }}",
            "description": "Satellite",
            "format": "A or T"
        },
        "frp": {
            "value": {{ frp }},
            "description": "Fire Radiative Power",
            "format": "MW/km**2"
        }
    }
}
