#!/bin/bash

# Script to install MESA Wildfire software unto a vinilla Ubuntu machine

#set -x

HERE=$(readlink -f `dirname $0`)
MESA_ROOT=$(readlink -f $HERE/../..)

# we need VOLUMES from admin/vars
source $MESA_ROOT/admin/ENV

cp $HERE/supervisor.conf /etc/supervisor/supervisor.conf
cp $HERE/supervisor.init /etc/init.d/supervisor
sed "s|username.*=.*|username=$SUPERVISOR_USER|g" -i /etc/supervisor/supervisor.conf
sed "s|password.*=.*|password=$SUPERVISOR_PASS|g" -i /etc/supervisor/supervisor.conf

FILES=$HERE/conf.d/*
for f in $FILES; do
  TARGET=/etc/supervisor/conf.d/$(basename $f)
  cat $f | sed -e "s|MESA_ROOT=\".*|MESA_ROOT=$MESA_ROOT|g" > $TARGET
  echo "$f --> $TARGET"
done;
